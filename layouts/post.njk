{% extends "layouts/default.njk" %}

{% set bodyClass = "page-post" %}

{% block head %}
<meta name="description" content="{{ excerpt }}" />

<meta property="og:type" content="article" />
<meta property="og:description" content="{{ excerpt }}" />
<meta property="article:published_time" content="{{ date|iso_date }}" />

<meta name="twitter:card" content="summary">
<meta name="twitter:creator" value="@{{ links.twitter }}" />
<meta name="twitter:label1" value="Reading time" />
<meta name="twitter:data1" value="{{ readTime }}" />
{% endblock %}

{% block body %}
<div class="container">
  <article class="post">
    <header>
      <h1>{{ title }}</h1>
      <div class="post__info">
        <time datetime="{{ date|iso_date }}">{{ date|date }}</time> â€¢ <span>{{ readTime }}</span>
      </div>
    </header>

    {% if hero %}
      <img class="post__hero" src="{{ hero }}"/>
    {% endif %}

    <section>
      {{ contents|safe }}
    </section>

    {% if tags %}
      <footer class="post__tags">
        {% for tag in tags %}
          <a class="tag" href="/blog/topics/{{ tag.slug }}">
            <i class="mdi mdi-tag"></i>
            {{ tag.name }}
          </a>
        {% endfor %}
      </footer>
    {% endif %}
  </article>
</div>
{% endblock %}
