{% extends "layouts/default.njk" %}

{% set bodyClass = "page-home" %}

{% block body %}
<div class="bio">
  <img src="/images/logo.jpg"></img>
  <h1>Michael Spencer</h1>
  <h2>Software Developer</h2>
</div>

<div class="page-home__content">
  {{ contents|safe }}

  <section class="page-home__latest">
    <h2>Latest Posts</h2>

    {% set posts = collections.latestPosts %}
    {% include "partials/posts-list.njk" %}
  </section>

  <aside class="page-home__aside">
    <h2>Topics</h2>

    <div class="page-home__tags">
      {% for key, tag in tags %}
        <a class="tag" href="/blog/topics/{{ tag.urlSafe }}">
          {{ key }}
        </a>
      {% endfor %}
    </div>
  </aside>

</div>

{% endblock %}
